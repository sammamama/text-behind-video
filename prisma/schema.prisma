generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?
  image         String?
  email         String?  @unique
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]
  videos        Video[]
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Video {
  id            Int           @id @default(autoincrement())
  uploadDate    DateTime      @default(now())
  url           String
  thumbnailUrl  String?

  noBgUrl       String?
  replicateId   String?
  noBgStatus    NoBgStatus    @default(NOT_STARTED)

  width         Int?
  height        Int?
  duration      String?
  status        VideoStatus   @default(PENDING)
  user          User          @relation(fields: [userId], references: [id])
  userId        Int

  @@index([userId])
  @@index([url])
  @@index([status])
}

enum NoBgStatus {
  NOT_STARTED
  PROCESSING
  COMPLETED
  FAILED
}

enum VideoStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}
